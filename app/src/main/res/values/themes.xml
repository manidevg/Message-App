<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InterviewMessageApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText.Font.14.Regular.colorSecondary" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="TextView.Font.16.Medium.colorPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.Font.12.Regular.colorSecondaryVarient" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextView.Font.14.Medium.colorSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="TextView.Font.12.Regular.colorOnSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Button.Font.14.Medium.colorSecondary" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

</resources>